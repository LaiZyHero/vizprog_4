<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Design.PreviewWith>
		<Border Height="120" Width="120">
			<Button Classes="CalculatorButton">I</Button>
		</Border>
	</Design.PreviewWith>

	<Style Selector="Button.CalculatorButton">
		<Setter Property="VerticalAlignment" Value="Stretch"/>
		<Setter Property="HorizontalAlignment" Value="Stretch"/>
		<Setter Property="HorizontalContentAlignment" Value="Center"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>
		<Setter Property="FontSize" Value="36"/>
		<Setter Property="Background" Value="Gray"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="Command" Value="{Binding OnClickCommand}"/>
	</Style>

	<Style Selector="TextBox.CalculatorTextBox">
		<Setter Property="VerticalAlignment" Value="Stretch"/>
		<Setter Property="HorizontalAlignment" Value="Stretch"/>
		<Setter Property="TextAlignment" Value="Center"/>
		<Setter Property="Padding" Value="0, 15, 0, 0"/>
		<Setter Property="Text" Value="{Binding Expression}"/>
		<Setter Property="FontSize" Value="66"/>
		<Setter Property="Foreground" Value="Gray"/>
		<Setter Property="Background" Value="White"/>
		<Setter Property="IsUndoEnabled" Value="False"/>
		<Setter Property="Focusable" Value="False"/>
	</Style>

	<Style Selector="Grid.Calculator">

	</Style>
</Styles>